<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">






    <TextView
        android:id="@+id/lp_help_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/tag_lights_activity_help"
        android:textAlignment="center"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/lp_main_ampel_tv"
        android:layout_below="@+id/lp_help_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Relevante Hauptampel"
        android:textAlignment="center"
        android:textSize="18dp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tl_iv_rl"
        android:layout_below="@+id/lp_main_ampel_tv"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_ampel_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_main_ampel_green" />

        <ImageView
            android:id="@+id/main_ampel_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_main_ampel_red"
            android:layout_toRightOf="@+id/main_ampel_green"
            android:layout_toEndOf="@+id/main_ampel_green" />

    </RelativeLayout>

</RelativeLayout>