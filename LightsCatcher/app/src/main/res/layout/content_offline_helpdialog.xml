<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:padding="10dp"
    android:textAlignment="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:src="@drawable/ic_info" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Auch wenn du offline bist, kannst du ganz normal Fotos machen und Punkte sammeln. Die Fotos werden auf deinem Gerät zwischengespeichert und später hochgeladen, sobald die App wieder eine Verbindung herstellen konnte." />

</LinearLayout>