<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/info_contain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/datenschutz_contain"
        android:background="@color/colorAccent">
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/account_contain"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white">
        <TextView
            android:id="@+id/settings_username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="26dp"
            android:text="@string/settings_username_label"
            android:textSize="26dp"
            android:textStyle="bold" />

     <TextView
         android:id="@+id/settings_username"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:layout_marginRight="26dp"
         android:layout_marginTop="26dp"
         android:text="Dein Name"
         android:textColor="@color/colorPrimaryDark"
         android:textSize="26dp" />

        <Button
            android:id="@+id/settings_button_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/settings_username_label"
            android:layout_alignRight="@+id/settings_username_label"
            android:layout_below="@+id/settings_username_label"
            android:layout_marginTop="16dp"
            android:onClick="onLogout"
            android:text="@string/settings_button_logout" />

    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:id="@+id/datenschutz_contain"
        android:layout_marginTop="26dp"
        android:background="@color/white"
        android:layout_below="@+id/account_contain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/settings_rechtliches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="26dp"
            android:text="@string/settings_datenschutz_label"
            android:textSize="26dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/settings_button_datenschutz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:onClick="onInfo"
            android:text="Info" />
    </RelativeLayout>

</RelativeLayout>