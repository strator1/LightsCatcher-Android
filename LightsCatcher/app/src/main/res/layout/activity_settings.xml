<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/account_contain"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white">
        <TextView
            android:id="@+id/settings_username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="26dp"
            android:text="@string/settings_username_label"
            android:textSize="26dp"
            android:textStyle="bold" />

     <TextView
         android:id="@+id/settings_username"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:layout_marginRight="26dp"
         android:layout_marginTop="26dp"
         android:text="Your name"
         android:textColor="@color/colorPrimaryDark"
         android:textSize="26dp" />

        <Button
            android:id="@+id/settings_button_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/settings_username_label"
            android:layout_alignRight="@+id/settings_username_label"
            android:layout_below="@+id/settings_username_label"
            android:layout_marginTop="16dp"
            android:onClick="onLogout"
            android:text="@string/settings_button_logout" />
    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:id="@+id/datenschutz_contain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:background="@color/white"
        android:layout_below="@+id/account_contain">

        <TextView
            android:id="@+id/settings_rechtliches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="26dp"
            android:text="@string/settings_datenschutz_label"
            android:textSize="26dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="26dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/ic_info_black_24dp"
            android:gravity="right|center_vertical"
            android:onClick="onInfo" />
    </RelativeLayout>
    </RelativeLayout>